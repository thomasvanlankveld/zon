{
  "name": "zon",
  "version": "0.2.0",
  "description": "Shed light on your codebase",
  "repository": "git@github.com:thomasvanlankveld/zon.git",
  "author": "Thomas van Lankveld <5240626+thomasvanlankveld@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "tauri": "tauri",
    "format": "deno task prettier-format",
    "lint": "deno task prettier-lint && deno task eslint",
    "prettier-lint": "deno run --no-prompt --allow-env=TERM --allow-sys=cpus,uid --allow-read=. --allow-write=./node_modules/.cache/prettier npm:prettier src --check",
    "prettier-format": "deno run --no-prompt --allow-env=TERM --allow-sys=cpus,uid --allow-read=. --allow-write=./node_modules/.cache/prettier,src npm:prettier src --write",
    "eslint": "deno run --allow-env --allow-sys=cpus --allow-read=. --deny-read=/uSERS --allow-write=.eslintcache npm:eslint src"
  },
  "dependencies": {
    "@tauri-apps/plugin-dialog": "~2.0.1",
    "solid-js": "^1.7.8",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-shell": "^2"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.3.1",
    "vite-plugin-solid": "^2.8.0",
    "@tauri-apps/cli": "^2"
  }
}
